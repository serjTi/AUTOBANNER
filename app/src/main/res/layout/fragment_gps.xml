<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llGPS"
        android:foregroundGravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvDistanceDetected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ваша локация не определена"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/pbDistance"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:max="100000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llReport"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOnGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Включить GPS" />

        <Button
            android:id="@+id/btnOffGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Выключить GPS" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="создать отчёт" />
    </LinearLayout>

</RelativeLayout>